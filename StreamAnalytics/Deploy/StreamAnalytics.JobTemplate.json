{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ASAApiVersion": {
      "type": "string",
      "defaultValue": "2017-04-01-preview",
      "allowedValues": [
        "2017-04-01-preview",
        "2016-03-01"
      ]
    },
    "StreamAnalyticsJobName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 63,
      "metadata": {
        "description": "Stream Analytics Job Name, can contain alphanumeric characters and hypen and must be 3-63 characters long"
      }
    },
    "Location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "OutputStartMode": {
      "type": "string",
      "defaultValue": "JobStartTime",
      "allowedValues": [
        "JobStartTime",
        "CustomTime",
        "LastOutputEventTime"
      ]
    },
    "OutputStartTime": {
      "type": "string",
      "defaultValue": "2019-01-01T00:00:00Z"
    },
    "DataLocale": {
      "type": "string",
      "defaultValue": "en-US"
    },
    "OutputErrorPolicy": {
      "type": "string",
      "defaultValue": "Stop",
      "allowedValues": [
        "Drop",
        "Stop"
      ]
    },
    "EventsLateArrivalMaxDelayInSeconds": {
      "type": "int",
      "defaultValue": 5
    },
    "EventsOutOfOrderMaxDelayInSeconds": {
      "type": "int",
      "defaultValue": 0
    },
    "EventsOutOfOrderPolicy": {
      "type": "string",
      "defaultValue": "Adjust",
      "allowedValues": [
        "Adjust",
        "Drop"
      ]
    },
    "CompatibilityLevel": {
      "type": "string",
      "defaultValue": "1.2",
      "allowedValues": [
        "1.0",
        "1.1",
        "1.2"
      ]
    },
    "ContentStoragePolicy": {
      "type": "string",
      "defaultValue": "SystemAccount",
      "allowedValues": [
        "SystemAccount",
        "JobStorageAccount"
      ]
    },
    "Query": {
      "type": "string"
    },
    "Output_rawtemperature_server": {
      "type": "string"
    },
    "Output_rawtemperature_database": {
      "type": "string"
    },
    "Output_rawtemperature_user": {
      "type": "string"
    },
    "Output_rawtemperature_table": {
      "type": "string"
    },
    "Output_rawtemperature_password": {
      "type": "string"
    },
    "Output_rawtemperature_maxWriterCount": {
      "type": "int",
      "defaultValue": 0
    },
    "Output_rawtemperature_maxBatchCount": {
      "type": "int",
      "defaultValue": 10000
    },
    "Output_rawtemperature_authenticationMode": {
      "type": "string",
      "defaultValue": "ConnectionString"
    },
    "Output_aggregatedtemperature_server": {
      "type": "string"
    },
    "Output_aggregatedtemperature_database": {
      "type": "string"
    },
    "Output_aggregatedtemperature_user": {
      "type": "string"
    },
    "Output_aggregatedtemperature_table": {
      "type": "string"
    },
    "Output_aggregatedtemperature_password": {
      "type": "string"
    },
    "Output_aggregatedtemperature_maxWriterCount": {
      "type": "int",
      "defaultValue": 0
    },
    "Output_aggregatedtemperature_maxBatchCount": {
      "type": "int",
      "defaultValue": 10000
    },
    "Output_aggregatedtemperature_authenticationMode": {
      "type": "string",
      "defaultValue": "ConnectionString"
    },
    "StorageAccountName": {
      "type": "string"
    },
    "StorageAccountSku": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    },
    "StorageAccountKind": {
      "type": "string",
      "defaultValue": "StorageV2",
      "allowedValues": [
        "BlobStorage",
        "BlockBlobStorage",
        "FileStorage",
        "Storage",
        "StorageV2"
      ],
      "metadata": {
        "description": "Storage account kind"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('StorageAccountName')]",
      "apiVersion": "2019-04-01",
      "location": "[parameters('location')]",
      "kind": "[parameters('StorageAccountKind')]",
      "sku": {
        "name": "[parameters('StorageAccountSku')]"
      },
      "properties": {},
      "resources": []
    },
    {
      "type": "Microsoft.StreamAnalytics/StreamingJobs",
      "apiVersion": "[parameters('ASAApiVersion')]",
      "name": "[parameters('StreamAnalyticsJobName')]",
      "location": "[parameters('Location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('StorageAccountName'))]"
      ],
      "properties": {
        "outputStartMode": "[parameters('OutputStartMode')]",
        "outputStartTime": "[if(equals(parameters('OutputStartMode'),'CustomTime'), parameters('OutputStartTime'), json('null'))]",
        "sku": {
          "name": "standard"
        },
        "jobType": "Edge",
        "eventsOutOfOrderPolicy": "[parameters('EventsOutOfOrderPolicy')]",
        "outputErrorPolicy": "[parameters('OutputErrorPolicy')]",
        "eventsOutOfOrderMaxDelayInSeconds": "[parameters('EventsOutOfOrderMaxDelayInSeconds')]",
        "eventsLateArrivalMaxDelayInSeconds": "[parameters('EventsLateArrivalMaxDelayInSeconds')]",
        "dataLocale": "[parameters('DataLocale')]",
        "compatibilityLevel": "[parameters('CompatibilityLevel')]",
        "contentStoragePolicy": "[parameters('ContentStoragePolicy')]",
        "transformation": {
          "name": "Transformation",
          "properties": {
            "query": "[parameters('Query')]"
          }
        },
        "inputs": [
          {
            "name": "sensorinput",
            "properties": {
              "type": "Stream",
              "datasource": {
                "type": "GatewayMessageBus",
                "properties": {}
              },
              "compression": {
                "type": "None"
              },
              "serialization": {
                "type": "Json",
                "properties": {
                  "encoding": "UTF8"
                }
              }
            }
          }
        ],
        "outputs": [
          {
            "name": "telemetryoutput",
            "properties": {
              "datasource": {
                "type": "GatewayMessageBus",
                "properties": {}
              },
              "serialization": {
                "type": "Json",
                "properties": {
                  "encoding": "UTF8",
                  "format": "Array"
                }
              }
            }
          },
          {
            "name": "rawtemperature",
            "properties": {
              "datasource": {
                "type": "Microsoft.Sql/Server/Database",
                "properties": {
                  "server": "[parameters('Output_rawtemperature_server')]",
                  "database": "[parameters('Output_rawtemperature_database')]",
                  "user": "[parameters('Output_rawtemperature_user')]",
                  "table": "[parameters('Output_rawtemperature_table')]",
                  "password": "[parameters('Output_rawtemperature_password')]",
                  "maxWriterCount": "[parameters('Output_rawtemperature_maxWriterCount')]",
                  "maxBatchCount": "[parameters('Output_rawtemperature_maxBatchCount')]",
                  "authenticationMode": "[parameters('Output_rawtemperature_authenticationMode')]"
                }
              }
            }
          },
          {
            "name": "aggregatedtemperature",
            "properties": {
              "datasource": {
                "type": "Microsoft.Sql/Server/Database",
                "properties": {
                  "server": "[parameters('Output_aggregatedtemperature_server')]",
                  "database": "[parameters('Output_aggregatedtemperature_database')]",
                  "user": "[parameters('Output_aggregatedtemperature_user')]",
                  "table": "[parameters('Output_aggregatedtemperature_table')]",
                  "password": "[parameters('Output_aggregatedtemperature_password')]",
                  "maxWriterCount": "[parameters('Output_aggregatedtemperature_maxWriterCount')]",
                  "maxBatchCount": "[parameters('Output_aggregatedtemperature_maxBatchCount')]",
                  "authenticationMode": "[parameters('Output_aggregatedtemperature_authenticationMode')]"
                }
              }
            }
          }
        ],
        "jobStorageAccount": {
          "accountName": "[parameters('StorageAccountName')]",
          "accountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('StorageAccountName')), '2019-04-01').keys[0].value]",
          "authenticationMode": "ConnectionString"
        }
      }
    }
  ]
}